{
    "name": "pilulka/core-api-client",
    "description": "Facade for core-api actions",
    "homepage": "https://www.pilulka.cz",
    "type": "library",
    "license": "proprietary",
    "authors": [
        {
            "name": "Ruslan Kladko",
            "email": "rkladko@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "guzzlehttp/guzzle": "~6.0",
        "netresearch/jsonmapper": "^1.2"
    },
    "autoload": {
        "psr-4": {
            "Pilulka\\CoreApiClient\\": "src/"
        }
    },
    "autoload-dev": {
        "files": ["tests/_bootstrap.php"],
        "psr-4": {
            "Pilulka\\CoreApiClient\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "codeception/codeception": "^2.4 || ^3.0",
        "codeception/specify": "^1.1"
    },
    "scripts": {
        "cept": "vendor/bin/codecept run",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    }
}
